{
    "manifest_version": 2,
    "name" : "Eyebrowse",
    "version" : "1.0",
    "description" : "Eyebrowse by CSAIL",
    "browser_action" : {
        "default_icon" : "img/eye.png",
        "default_popup" : "popup.html",
        "default_title" : "Eyebrowse"
        },
    "background" : {
        "page": "background.html"
        },
    "content_scripts": [
            {
              "matches": ["<all_urls>"],
              "js": ["libs/jquery-1.8.2.js", "libs/mustache.js", "libs/URL.js", "js/prompt.js", "libs/jquery.idle.js", "js/idle-detection.js"]
            }
        ],
    "web_accessible_resources": [
        "img/bg-body.png",
        "img/bg-nav.png",
        "js_templates/*"
        ],
    "permissions": [
        "http://eyebrowse.herokuapp.com/.*",
        "http://localhost:5000/.*",
        "cookies",
        "tabs",
        "storage",
        "notifications",
        "background"
    ], 
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "options_page":"options.html"
}
